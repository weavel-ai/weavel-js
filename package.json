{
  "name": "weavel-sdk",
  "description": "Modular monorepo for all Weavel JS/TS SDKs",
  "version": "1.0.1",
  "engines": {
    "node": ">=18"
  },
  "author": {
    "name": "Weavel",
    "email": "hello@weavel.ai",
    "url": "https://weavel.ai"
  },
  "private": true,
  "license": "MIT",
  "workspaces": [
    "weavel",
    "weavel-core"
  ],
  "scripts": {
    "build": "rollup -c --bundleConfigAsCjs",
    "lint": "eslint -c .eslintrc.cjs --fix weavel*",
    "test": "turbo run test",
    "generate-api": "openapi-typescript weavel-core/openapi-spec.yaml --output weavel-core/src/openapi/server.ts"
  },
  "dependencies": {
    "axios": "^1.7.2"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-react": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.3",
    "jest": "^29.7.0",
    "openapi-typescript": "^7.0.2",
    "prettier": "^3.3.2",
    "rollup": "^4.18.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-jest": "^29.1.5",
    "turbo": "^2.0.6",
    "typedoc": "^0.26.3",
    "typescript": "^5.5.3"
  },
  "packageManager": "npm@7.0.0",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,css,scss}": "prettier --write"
  }
}
